mixin Form(store = {})
  form(
    action="/add"
    method="POST"
    class="card"
  )
    label(for="name") Name
    input(type="text" name="name" id="name")

    label(for="description") Description
    textarea(name="description" id="description")

    - const tags = ['Wifi', 'Open Late', 'Beer', 'Liquor', 'Veggie']
    ul.tags
      each choice in tags
        .tag.tag__choice
          input(
            type="checkbox"
            id=choice
            value=choice
            name="tags"
          )
          label(for=choice) #{choice}
    input(type="submit" value="Save ->" class="button")

